<%= form_for(organization, html: {class:'form-horizontal'}) do |f| %>
  <% if organization.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(organization.errors.count, "error") %> prohibited this organization from being saved:</h2>

      <ul>
      <% organization.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class:'control-label col-xs-2' %>
    <div class="col-xs-4">
      <%= f.text_field :name, class:'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :website, class:'control-label col-xs-2' %>
    <div class="col-xs-4">
      <%= f.text_field :website, class:'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :country, class:'control-label col-xs-2' %>
    <div class="col-xs-4">
      <%= f.collection_select :country, @countries, :id, :name, {}, {:class => 'required'} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :currency, class:'control-label col-xs-2' %>
    <div class="col-xs-4">
      <%= f.text_field :currency, class:'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :time_zone, class:'control-label col-xs-2' %>
    <div class="col-xs-4">
      <%= f.text_field :time_zone, class:'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :logo, class:'control-label col-xs-2' %>
    <div class="col-xs-4">
      <%= f.file_field :logo, class:'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class:"btn btn-success"  %>
   </div>
<% end %>
